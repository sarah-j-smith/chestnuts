    "version": "2.0.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "preLaunchTask": "C/C++: DEBUG clang build active file",
            "internalConsoleOptions": "openOnSessionStart",
            "logging": {
                "moduleLoad": false,
                "programOutput": true,
                "trace": false
            },
            "showDisplayString": false,
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            // "args": ["<", "test1.txt"],
            "environment": [],
            "externalConsole": true, // set true to enable keyboard input
            "osx": {
                "MIMode": "lldb"
            }
        },
